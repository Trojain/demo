{
  "name": "saas-admin-classic",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "基于 React 19.2 + Ant Design 6.1 + Vite 7.3 的标准 SaaS 管理后台",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint \"**/*.{css,scss}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.1.0",
    "antd": "^6.1.1",
    "@ant-design/icons": "^6.1.0",
    "@ant-design/cssinjs": "^2.0.1",
    "axios": "^1.7.9",
    "ahooks": "^3.8.1",
    "zustand": "^5.0.3",
    "dayjs": "^1.11.13",
    "lodash-es": "^4.17.21",
    "classnames": "^2.5.1",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "react-error-boundary": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/lodash-es": "^4.17.12",
    "typescript": "^5.7.2",
    "vite": "^7.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "sass": "^1.97.0",
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "typescript-eslint": "^8.19.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.2.0",
    "prettier": "^3.4.2",
    "stylelint": "^16.12.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "vitest": "^2.1.8",
    "@testing-library/react": "^16.3.1",
    "@testing-library/jest-dom": "^6.6.2",
    "jsdom": "^25.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
