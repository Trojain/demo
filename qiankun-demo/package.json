{
    "devDependencies": {
        "concurrently": "^9.2.0",
        "open": "^10.1.2",
        "wait-on": "^8.0.3"
    },
    "scripts": {
        "start": "concurrently \"npm run start:main\" \"npm run start:react\" \"npm run start:vue2\" \"npm run start:vue3\" \"npm run open-main\"",
        "start:main": "npm run dev --workspace=main-app",
        "start:react": "npm run start --workspace=react-app",
        "start:vue2": "npm run serve --workspace=vue2-app",
        "start:vue3": "npm run dev --workspace=vue3-app",
        "open-main": "wait-on http://localhost:2000 && open http://localhost:2000"
    },
    "workspaces": [
        "main-app",
        "react-app",
        "vue2-app",
        "vue3-app"
    ]
}
